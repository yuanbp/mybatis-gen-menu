<idea-plugin>
    <id>chieftain.mybatis.mybatis-gen-menu</id>
    <name>Mybatis-Gen-Menu</name>
    <vendor email="yuanbp0912@163.com" url="http://www.chieftain.com">chieftain</vendor>

    <description><![CDATA[
    在Project视图中添加右键菜单(MybatisGen),在 Mybatis Generator 配置文件上右键,选择MybatisGen,根据配置文件生成内容.<br>
    <em>:-)</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="Mybatis.Generator" class="org.mybatis.gen.actions.MybatisGen" text="MybatisGen" description="MybatisGen">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="chieftain.editor.mybatisgen" class="org.mybatis.gen.actions.EditorMybatisGen" text="MybatisGen" description="EditorMybatisGen">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>